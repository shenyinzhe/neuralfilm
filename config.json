{
    "name": "Hasselblad",
    "n_gpu": 1,

    "arch": {
        "type": "UNet",
        "args": {}
    },
    "data_loader": {
        "type": "DataLoader",
        "args":{
            "data_dir": "data/Hasselblad",
            "batch_size": 3,
            "shuffle": true,
            "validation_split": 0.4,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
